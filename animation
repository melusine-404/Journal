  <h1>Page de test : Animation Rive</h1>

  <div id="my-rive" title="Clique-moi ðŸ’–"></div>

  <script>
    const riveInstance = new rive.Rive({
      src: "like_animation.riv", // assure-toi que ce fichier est dans le mÃªme dossier
      canvas: document.createElement("canvas"),
      autoplay: false,
      onLoad: () => {
        document.getElementById("my-rive").appendChild(riveInstance.canvas);
      }
    });

    // Rejouer l'animation au clic
    document.getElementById("my-rive").addEventListener("click", () => {
      riveInstance.play();
    });
  </script>
